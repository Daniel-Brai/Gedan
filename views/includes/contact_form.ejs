<form action="/" method="POST" id="form" class="space-y-3 lg:space-y-4 w-full md:w-96 lg:min-w-[30rem] lg:max-w-[40rem]"  >
      
    <label for="fullname" class="block">
      <span class="after:content-['*'] after:ml-0.5 after:text-red-500 block text-sm font-medium text-slate-700">Your name</span>
      <input type="text" id="fullname"  name="name" class="mt-1 block w-full px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400
        focus:outline-none focus:border-[rgba(80,165,111,0.65)] focus:ring-1 focus:ring-[rgba(80,165,111,0.8)]
        disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none
        invalid:border-red-500 invalid:text-red-600
        focus:invalid:border-red-500 focus:invalid:ring-red-500
      "/>
      <!-- error checking -->
      <% if(typeof errors != 'undefined') { %>
          <div class="my-3 text-sm text-red-500 w-full">
            <% let messages = errors.map(function(err) {return err.msg;}); %>
            <%= messages[0] %>
          </div>
      <% } %>
    </label>

    <label for="email" class="block">
      <span class="after:content-['*'] after:ml-0.5 after:text-red-500 block text-sm font-medium text-slate-700">Email</span>
      <input type="email" name="email" id="email" class="mt-1 block w-full px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400
        focus:outline-none focus:border-[rgba(80,165,111,0.65)] focus:ring-1 focus:ring-[rgba(80,165,111,0.8)]
        disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none
        invalid:border-red-500 invalid:text-red-600
        focus:invalid:border-red-500 focus:invalid:ring-red-500
      "/>
      <!-- error checking -->
      <% if(typeof errors != 'undefined') { %>
        <div class="my-3 text-sm text-red-500 w-full">
          <% let messages = errors.map(function(err) {return err.msg;}); %>
          <%= messages[1] %>
        </div>
      <% } %>
    </label>

    <label for="phone" class="block">
      <span class="after:content-['*'] after:ml-0.5 after:text-red-500 block text-sm font-medium text-slate-700">Phone</span>
      <input type="tel" id="phone" name="phone" class="mt-1 block w-full px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400
        focus:outline-none focus:border-[rgba(80,165,111,0.65)] focus:ring-1 focus:ring-[rgba(80,165,111,0.8)]
        disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none
        invalid:border-red-500 invalid:text-red-600
        focus:invalid:border-red-500 focus:invalid:ring-red-500
      "/>
      <!-- error checking -->
      <% if(typeof errors != 'undefined') { %>
        <div class="my-3 text-sm text-red-500 w-full">
          <% let messages = errors.map(function(err) {return err.msg;}); %>
          <%= messages[2] %>
        </div>
      <% } %>
    </label>

    <label for="message" class="block">
      <span class="after:content-['*'] after:ml-0.5 after:text-red-500 block text-sm font-medium text-slate-700">Message</span>
      <input name="message" id="message" type="text" class="mt-1 w-full block text-start h-60 px-3 py-2 overflow-y-scroll bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400
        focus:outline-none focus:border-[rgba(80,165,111,0.65)] focus:ring-1 focus:ring-[rgba(80,165,111,0.8)]
        disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none
        invalid:border-red-500 invalid:text-red-600
        focus:invalid:border-red-500 focus:invalid:ring-red-500
      "/>
      <!-- error checking -->
      <% if(typeof errors != 'undefined') { %>
        <div class="my-3 text-sm text-red-500 w-full">
          <% let messages = errors.map(function(err) {return err.msg;}); %>
          <%= messages[4] %>
        </div>
      <% } %>
    </label>

    <button class="flex items-center mt-7 justify-center appearance-none px-4 py-3 text-lg text-white font-medium bg-[rgb(80,165,111)] hover:bg-[rgba(80,165,111,0.9)] focus:ring-1 focus:ring-[rgba(80,165,111,0.8)] rounded-full" type="submit">
      <span>Send message</span>
      <svg class="ml-2 fill-white"xmlns="http://www.w3.org/2000/svg" width="24" height="24"><path d="m21.426 11.095-17-8A.999.999 0 0 0 3.03 4.242L4.969 12 3.03 19.758a.998.998 0 0 0 1.396 1.147l17-8a1 1 0 0 0 0-1.81zM5.481 18.197l.839-3.357L12 12 6.32 9.16l-.839-3.357L18.651 12l-13.17 6.197z"></path></svg>
    </button>

</form>